import java.io.*;
import java.util.*;

public class Part1 {
	public static void main(String[] args) {
		int[] inputArray = inputInfo();
		
	}
	
	public static int[] inputInfo() {
		Scanner scan = new Scanner (System.in);
		int[] inputArray = new int[3];
		System.out.printf("Loan Amount: ");
		inputArray[0] = scan.nextInt();
		System.out.printf("%nNumber of Years: ");
		inputArray[1] = scan.nextInt();
		System.out.printf("%nAnnual Interest Rate: ");
		inputArray[2] = scan.nextInt();
		scan.close();
		return inputArray;
	}
}